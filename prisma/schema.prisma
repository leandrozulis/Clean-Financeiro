generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conta {
  id            String    @id @default(uuid())
  email         String    @unique
  senha         String
  token         String
  nome          String
  saldo         Float
  dtcadastro    DateTime  @default(now())
  dtatualizacao DateTime? @default(now())
  Entrada       Entrada[]
  Saida         Saida[]

  @@map("contas")
}

model Entrada {
  id            String   @id @default(uuid())
  valor         Float
  descricao     String
  meioPagamento String
  dtcadastro    DateTime @default(now())

  conta  Conta  @relation(fields: [userId], references: [id])
  userId String

  @@map("entradas")
}

model Saida {
  id            String   @id @default(uuid())
  valor         Float
  descricao     String
  meioPagamento String
  dtcadastro    DateTime @default(now())

  conta  Conta  @relation(fields: [userId], references: [id])
  userId String

  @@map("saidas")
}
