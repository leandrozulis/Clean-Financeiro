generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conta {
  id            String        @id @default(uuid())
  email         String        @unique
  senha         String
  token         String
  nome          String
  saldo         Float
  dtcadastro    DateTime      @default(now())
  dtatualizacao DateTime?     @default(now())
  Entrada       Entrada[]
  Saida         Saida[]
  Cartao        Cartao[]
  ContaAPagar   ContaAPagar[]

  @@map("contas")
}

model Entrada {
  id            String   @id @default(uuid())
  valor         Float
  descricao     String
  meioPagamento String
  dtcadastro    DateTime @default(now())

  conta  Conta  @relation(fields: [userId], references: [id])
  userId String

  @@map("entradas")
}

model Saida {
  id            String   @id @default(uuid())
  valor         Float
  descricao     String
  meioPagamento String
  dtcadastro    DateTime @default(now())

  conta  Conta  @relation(fields: [userId], references: [id])
  userId String

  @@map("saidas")
}

model Cartao {
  id            String    @id @default(uuid())
  limite        Float
  descricao     String
  nomeBanco     String
  dtfechamento  String
  dtvencimento  String
  dtcadastro    DateTime  @default(now())
  dtatualizacao DateTime? @default(now())

  conta       Conta         @relation(fields: [userId], references: [id])
  userId      String
  ContaAPagar ContaAPagar[]

  @@map("cartoes")
}

model ContaAPagar {
  id            String    @id @default(uuid())
  valor         Float
  descricao     String
  parcelas      String
  pago          DateTime?
  valorPago     Float     @default(0)
  parcelaPaga   String    @default("0")
  dtcadastro    DateTime  @default(now())
  dtatualizacao DateTime? @default(now())

  cartao   Cartao @relation(fields: [cartaoId], references: [id])
  cartaoId String

  conta  Conta  @relation(fields: [userId], references: [id])
  userId String

  @@map("contasAPagar")
}
